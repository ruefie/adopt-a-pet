<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
  <style>
    .container {
        max-width: 1200px;
      }
      .card {
        width: 100%;
        height: 100%;
        display: flex;
        flex-direction: column;
      }
      .card-img-top {
        width: 100%;
        height: 200px;
        object-fit: cover;
      }
      .card-body {
        flex: 1;
        display: flex;
        flex-direction: column;
      }
      .card-text {
        flex: 1;
      }
  </style>
  <title>Pet List</title>
</head>
<body>
  <div class="container mt-5">
    <h1 class="mb-4">Adopt a Pet</h1>
    <a href="/addPet" class="btn btn-primary mb-4">Add a Pet</a>
    <div class="row">
      <% pets.forEach(pet => { %>
        <div class="col-md-4 mb-4">
          <div class="card">
            <img src="<%= pet.url %>" class="card-img-top" alt="<%= pet.name %>">
            <div class="card-body">
              <h5 class="card-title"><%= pet.name %></h5>
              <p class="card-text">Age: <%= pet.age %></p>
              <p class="card-text">Breed: <%= pet.breed %></p>
              <p class="card-text"><%= pet.description.substring(0,200) %>...</p>
              <a href="/animals/<%= pet.id %>" class="btn btn-primary mt-auto">View More</a>
            </div>
          </div>
        </div>
      <% }) %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
</body>
</html>
